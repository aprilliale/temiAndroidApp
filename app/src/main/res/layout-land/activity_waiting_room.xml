<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".waitingRoom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="350dp"
            android:background="@drawable/layout_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSetTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please select Team!"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/redTeam"
                    android:layout_width="340px"
                    android:layout_height="340px"
                    android:backgroundTint="@android:color/transparent"
                    app:srcCompat="@drawable/red_button_state"
                    />

                <ImageButton
                    android:id="@+id/blueTeam"
                    android:layout_marginStart="10dp"
                    android:layout_width="340px"
                    android:layout_height="340px"
                    android:backgroundTint="@android:color/transparent"
                    app:srcCompat="@drawable/blue_button_state"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/buttonPlay"
                android:layout_width="247dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@null"
                app:srcCompat="@drawable/next_button_state" />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>